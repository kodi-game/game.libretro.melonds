<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.melonds"
		name="Nintendo - DS (melonDS)"
		version="0.9.3.26"
		provider-name="Arisotura">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.nds" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>nds|dsi</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.melonds</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Nintendo - DS (melonDS) 0.9.3</summary>
		<description lang="en_GB">melonDS aims at providing fast and accurate Nintendo DS emulation.</description>
	</extension>
</addon>
